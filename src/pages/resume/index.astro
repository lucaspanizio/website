---
import Layout from '../../components/layout/index.astro';
import Header from '../../components/layout/header.astro';
import Footer from '../../components/layout/footer.astro';

import HeroSection from './sections/hero/index.astro';
import CourseSection from './sections/course-section.astro';
import GraduationSection from './sections/graduation-section.astro';
import ExperienceSection from './sections/experience-section.astro';
---

<Layout 
  title="Currículo - Panizio Dev" 
  description="Confira meu currículo." 
> 
  <Header />
  
  <main class="max-w-[1200px] mx-auto px-4 pt-24 pb-10">     
    <HeroSection />

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 items-start">
      <div class="lg:col-span-7 space-y-6">
        <GraduationSection />
        <ExperienceSection />
      </div>
      
      <div class="lg:col-span-5">
        <CourseSection />
      </div>
    </div>
  </main>

  <Footer />
</Layout>
